<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teamse1csdchcw.ui.controller.ResultsController"
      VBox.vgrow="ALWAYS">

    <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="220" minWidth="180"/>

            <!-- Selection column -->
            <TableColumn fx:id="selectColumn" text="" prefWidth="40" minWidth="40" maxWidth="40"/>

            <!-- Title column -->
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="350" minWidth="200"/>

            <!-- Authors column -->
            <TableColumn fx:id="authorsColumn" text="Authors" prefWidth="200" minWidth="100"/>

            <!-- Year column -->
            <TableColumn fx:id="yearColumn" text="Year" prefWidth="70" minWidth="60" maxWidth="80"/>

            <!-- Source column -->
            <TableColumn fx:id="sourceColumn" text="Source" prefWidth="100" minWidth="80"/>

            <!-- Access Level column -->
            <TableColumn fx:id="accessColumn" text="Access" prefWidth="90" minWidth="80"/>

            <!-- Citations column -->
            <TableColumn fx:id="citationsColumn" text="Citations" prefWidth="80" minWidth="70" maxWidth="100"/>

            <!-- Actions column -->
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="180" minWidth="150"/>
        </columns>

        <placeholder>
            <VBox alignment="CENTER" spacing="10">
                <Label text="No results to display" styleClass="placeholder-text"/>
                <Label text="Enter a search query above to get started" styleClass="placeholder-subtext"/>
            </VBox>
        </placeholder>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>

        <!-- Context menu for table rows -->
        <contextMenu>
            <ContextMenu fx:id="rowContextMenu">
                <items>
                    <MenuItem text="Open URL" onAction="#onOpenUrl"/>
                    <MenuItem text="Download PDF" onAction="#onDownloadPdf"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Bookmark" onAction="#onBookmark"/>
                    <MenuItem text="Export Citation..." onAction="#onExportCitation"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="View Details" onAction="#onViewDetails"/>
                    <MenuItem text="Copy DOI" onAction="#onCopyDoi"/>
                </items>
            </ContextMenu>
        </contextMenu>
    </TableView>

</VBox>
